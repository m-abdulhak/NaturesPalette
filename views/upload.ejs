<% include ../views/header %>

<div class="container" id ="submissionForm">
  <h2>Stacked form</h2>
  <form action="/submissionInfo" method="post">
    <div class="form-group">
        <div class="form-group">
            <label for="pwd">Name:</label>
            <input type="text" class="form-control" placeholder="Enter Name" name="name">
          </div>
      <label for="email">Email:</label>
      <input type="email" class="form-control" placeholder="Enter email" name="email">
    </div>
  
    <div class="form-group form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="checkbox" name="remember"> Remember me
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<div class="container-fluid text-center">
  <div class="row mx-auto">
    <div class="col">
      <form ref='uploadForm' id='uploadForm' action="/upload" method="post" encType="multipart/form-data">
        <br>
        <h2>Select A File to Upload!</h2>
        <br>
        <div class="input-group mx-auto" style="max-width: 70%">
            <label class="input-group-btn">
                <span class="btn btn-primary">
                    Browse&hellip; <input type="file" style="display: none;" id="fileSelect" name="sampleFile" required>
                </span>
            </label>
            <input type="text" class="form-control" readonly>
        </div>
        <button type="submit" class="btn btn-primary" value="Upload!">Submit</button>
      </form>
    </div>
  </div>
</div>
<br>
<div class="container-fluid text-center">
  <div class="row mx-auto">
    <div class="col">
        <table class="table table-hover mx-auto">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Files</th>
            </tr>
          </thead>
          <tbody>
            <% if(filelist !== null){ %>
              <% for (var i = 0; i < filelist.length; i++) { %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= filelist[i] %></td>
            </tr>    
              <% } %>          
            <% } %>
          </tbody>
        </table>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
    </div>
  </div>
</div>

<% include ../views/footer %>